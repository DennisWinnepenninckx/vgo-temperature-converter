<UserControl x:Class="View.TemperatureScaleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="{Binding Name}" Style="{StaticResource labelStyle}" />
        <Button Grid.Row="1" Grid.Column="0" Width="32" Height="32" Command="{Binding Decrement}" >-</Button>
        <TextBox Grid.Row="1" Grid.Column="1"
                    Style="{StaticResource textBoxStyle}"
                    Text="{Binding Path=Temperature.Value, UpdateSourceTrigger=PropertyChanged}" />
        <Button Grid.Row="1" Width="32" Height="32" Grid.Column="2" Command="{Binding Increment}">+</Button>

    </Grid>
</UserControl>
